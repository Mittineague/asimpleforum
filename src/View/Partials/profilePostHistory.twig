{% if posts|length %}
	{% for post in posts %}
		<li class="row">
			<div class="col-md-4 relative">
				<div class="circle"></div>
				<div class="line"></div>
				<span class="date" title="{{ post.added|date('c') }}">
					{{ post.added|date('jS M y, H:i') }}
				</span>
			</div>
			<div class="col-md-8">
				<div class="profile-post">
					<a href="/{{ config('board', 'base') }}{{ post.forumName|url_encode }}/{{ post.topicName|url_encode }}-{{ post.topic }}/1#{{ post.id }}" class="topic-name">
						{{ post.name }}
					</a>

					<p>
						{{ truncate(post.content, 200)|raw }}
					</p>
				</div>
			</div>
		</li>
	{% endfor %}
{% endif %}